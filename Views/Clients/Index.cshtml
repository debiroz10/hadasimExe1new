@model IEnumerable<hadasimExe1new.Models.Client>

@{
    ViewData["Title"] = "Client";
}
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="ml-55">
    <p style="font-size: larger;">
        <a asp-action="Create" style="color: red;">Click here to create a new Client</a>
    </p>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-12">
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4 pb-2">
                    <div class="product-item d-flex flex-column align-items-center text-center bg-light rounded py-5 px-3">

                        <div class="position-relative rounded-circle mt-n3 mb-4 p-3 bg-secondary" style="width: 150px; height: 150px;">
                            <img class="rounded-circle w-100 h-100" src="@item.ImageUrl" style="object-fit: cover;">
                        </div>
                        <h5 class="font-weight-bold mb-4">@item.firstName</h5>
                        <h5 class="font-weight-bold mb-4">@item.lastName</h5>

                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color: red;">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" style="color: red;">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" style="color: red;">Delete</a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

