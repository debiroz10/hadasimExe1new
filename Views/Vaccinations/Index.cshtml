@model IEnumerable<hadsimnew.Models.Vaccination>

@{
    ViewData["Title"] = "Vaccinations";
}
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}




<p>
    <a asp-action="Create" style="color: red;">Create New</a>
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateVaccination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.manufacturer)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateVaccination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.manufacturer)
            </td>
         
            <td>
                    <a asp-action="Edit" asp-route-id="@item.id" style="color: red;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id" style="color: red;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" style="color: red;">Delete</a>
            </td>

        </tr>
}
    </tbody>
</table>
